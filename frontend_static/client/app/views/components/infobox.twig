<div class="infobox">
  <div class="infobox__text-wrap">
    {% if tagline %}
      <h6 class="infobox__tagline">{{tagline}}</h6>
    {% endif %}
    {% if title %}
      <h2 class="infobox__title">{{title}}</h2>
    {% endif %}
    {% if subtitle %}
      <h4 class="infobox__subtitle">{{subtitle}}</h4>
    {% endif %}
    {% if paragraph %}
      <p class="infobox__paragraph">{{paragraph|raw}}</p>
    {% endif %}
  </div>
  {% if cta %}
    <div class="infobox__cta">
      {% if cta.type == 'link' %}
        {% include './link.twig' with cta only %}
      {% else %}
        {% include './button.twig' with cta only %}
      {% endif %}
    </div>
  {% endif %}
</div>
