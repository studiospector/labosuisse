<div class="lb-cards-grid lb-cards-grid--ordered">
    {% for item in items %}
        <div class="lb-cards-grid__row row">
            <div class="lb-cards-grid__card col-12 col-md-4">
                {% include '@PathViews/components/card.twig' with item.brand_card only %}
            </div>
            {% for post in item.products %}
                <div class="lb-cards-grid__card col-12 col-md-4">
                    {% include ["@PathViews/woo/partials/tease-product.twig"] with {post: post} only %}
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>
