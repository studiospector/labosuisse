<li class="lb-menu__item">

    {% if type == 'link' %}
		<a class="lb-menu__link lb-menu__link--main lb-h6" tabindex="0">{{label}}</a>
	{% endif %}

	{% if type == 'submenu' %}
		<a class="lb-menu__link lb-menu__link--main lb-h6" tabindex="0">{{label}}</a>
		<ul class="lb-menu__submenu">
			<div class="lb-menu__wrapper">
				{% for item in children %}
					{% include '@PathViews/layout/menu-desktop-subitem.twig' with item only %}
				{% endfor %}
				{% if fixed|default([])|length > 0 %}
					<div class="lb-menu__images">
						{% for item in fixed %}
							{% include '@PathViews/layout/menu-desktop-subitem.twig' with item only %}
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</ul>
	{% endif %}
    
</li>
