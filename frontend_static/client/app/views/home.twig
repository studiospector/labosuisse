{% extends '@PathViews/templates/_default.twig' %}

{% set bodyClass = 'magazine' %}

{% block main %}

    {# Content #}
    <hr class="lb-separator lb-separator--medium" data-variant="medium">
    {{ content|raw }}

    {# Filters #}
    {% if filters|length > 0 %}
        {% include '@PathViews/components/filters.twig' with filters only %}
        <hr class="lb-separator lb-separator--medium" data-variant="medium">
    {% endif %}

    {# Posts Grig #}
    <div class="container">
        <div class="row js-lb-cards-grid">
            {% for item in posts %}
                <div class="col-12 col-md-3">
                    {% include '@PathViews/components/card.twig' with item only %}
                </div>
            {% endfor %}
        </div>
    </div>

    {# Load More #}
    {% include '@PathViews/components/load-more.twig' with load_more only %}

    {# Pagination #}
    {% if pagination %}
        {{ pagination|raw }}
    {% endif %}

{% endblock %}
