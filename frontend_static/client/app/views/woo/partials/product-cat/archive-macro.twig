{% extends '@PathViews/templates/_default.twig' %}

{% set bodyClass = 'page' %}

{% block main %}

    {# Yoast SEO Breadcrumb #}
    {% if fn('function_exists', 'yoast_breadcrumb') %}
        {{ fn('yoast_breadcrumb', '<div id="lb-breadcrumbs" class="lb-breadcrumbs lb-breadcrumbs--fixed"><div class="container">', '</div></div>') }}
    {% endif %}

    {# Hero #}
    {% include '@PathViews/components/hero.twig' with {
        images: {
            original: term_image,
            large: term_image,
            medium: term_image,
            small: term_image
        },
        infoboxPosX: 'left',
        infoboxPosY: 'center',
        infobox: {
            title: 'MACRO - ' ~ term_name,
            paragraph: term_description,
        },
        container: false,
        variants: ['medium']
    } only %}
    <hr class="lb-separator lb-separator--big" data-variant="big" />

    <div class="container">
        <div class="row">
            {% for term in terms|default([]) %}
                <div class="col-12 col-md-3">
                    {% include '@PathViews/components/card.twig' with term only %}
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
