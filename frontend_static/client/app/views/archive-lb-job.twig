{% extends '@PathViews/templates/_default.twig' %}

{% set bodyClass = 'archive-lb-job' %}

{% block main %}

    {# Yoast SEO Breadcrumb #}
    {% if fn('function_exists', 'yoast_breadcrumb') %}
        {{ fn('yoast_breadcrumb', '<div id="lb-breadcrumbs" class="lb-breadcrumbs"><div class="container">', '</div></div>') }}
    {% endif %}

    {# Intro page #}
    {% include '@PathViews/components/page-intro.twig' with page_intro only %}
    {% include '@PathViews/components/separator.twig' with {variants: ['medium']} only %}

    {# Filters #}
    {% if filters|length > 0 %}
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8 offset-lg-2">
                    {% include '@PathViews/components/filters.twig' with filters only %}
                    {% include '@PathViews/components/separator.twig' with {variants: ['medium']} only %}
                </div>
            </div>
        </div>
    {% endif %}

    {# Posts Grid #}
    <div class="lb-cards-grid lb-cards-grid--default container">
        <div class="lb-cards-grid__row row js-lb-cards-grid">
            {% for post in items %}
                <div class="lb-cards-grid__card col-12 col-lg-8 offset-lg-2">
                    {% include '@PathViews/components/card.twig' with post only %}
                </div>
            {% endfor %}
        </div>
    </div>

    {# Pagination #}
    {% if pagination %}
        {{ pagination|raw }}
    {% endif %}

    {# Load More #}
    {% include '@PathViews/components/load-more.twig' with load_more only %}

    {# Info #}
    {% if infobox %}
        {% include '@PathViews/components/separator.twig' with {variants: ['big']} only %}
        <div class="container text-center">
            {% include '@PathViews/components/infobox.twig' with infobox only %}
        </div>
    {% endif %}

{% endblock %}
